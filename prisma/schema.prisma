generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  testSuites TestSuite[]
}

model TestSuite {
  id          String   @id @default(cuid())
  name        String
  description String?
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])
  testCases   TestCase[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TestCase {
  id          String   @id @default(cuid())
  name        String
  description String?
  steps       Json[]
  testSuiteId String
  testSuite   TestSuite @relation(fields: [testSuiteId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PageObject {
  id        String   @id @default(cuid())
  name      String
  url       String
  selectors Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
} 